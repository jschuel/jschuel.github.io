/* === Responsive adjustments for tablets/phones === */
@media (max-width: 768px) {
  /* Nav → vertical, full-width links */
  nav ul {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  nav ul li {
    width: 100%;
  }
  nav ul li a {
    display: block;
    padding: 1em;
  }
  /* Dropdown submenu full-width */
  nav ul li.dropdown .dropdown-menu {
    position: static;
    border: none;
  }

  /* Main containers get side padding */
  .container {
    padding: 0 1em;
  }

  /* Button groups → stack */
  .button-group,
  .button-group.research-buttons {
    flex-direction: column;
    width: 100%;
  }
  .button-group .btn,
  .button-group.research-buttons .btn {
    width: 100%;
    text-align: center;
    margin-bottom: 0.75em;
  }

  /* Projects row → column cards */
  .projects-row {
    flex-direction: column;
    gap: 2em;
  }
  .projects-row .card {
    max-width: 100%;
  }

  /* Footer social icons centered */
  footer .social {
    justify-content: center;
  }

  /* Reduce header text size */
  #header h1 {
    font-size: 2.5em;
  }

  /* Tighter section padding */
  #talks .container,
  #publications .container,
  section#research-intro .container {
    padding: 2em 0;
  }
}

/* Hide the toggle by default, show on mobile */
.nav-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 1em;
  z-index: 1001; /* over the overlay */
}
.nav-toggle .hamburger,
.nav-toggle .hamburger::before,
.nav-toggle .hamburger::after {
  content: "";
  display: block;
  width: 25px;
  height: 3px;
  background: #fff;
  margin: 5px 0;
  transition: transform 0.3s;
}

/* Mobile only */
@media (max-width: 768px) {
  /* Show toggle */
  .nav-toggle {
    display: block;
    position: absolute;
    top: 0.5em;
    right: 1em;
  }
  /* Hide links by default */
  .nav-links {
    display: none;
    flex-direction: column;
    background: #000;
    position: absolute;
    top: 100%;
    right: 0;
    width: 75%;
    max-width: 300px;
    border-left: 1px solid #333;
    z-index: 1000;
  }
  /* When open, show them */
  .nav-links.open {
    display: flex;
  }
  /* Full-width clickable items */
  .nav-links li a {
    display: block;
    padding: 1em;
    border-bottom: 1px solid #333;
  }
  /* Align dropdown submenu inside mobile menu */
  .nav-links .dropdown .dropdown-menu {
    position: static;
    border: none;
  }
}

